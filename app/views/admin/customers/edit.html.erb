<div class = "container">
<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
  <div class = "row">
    <div class="my-5">
      <%= form_with model:@customer, url:admin_customer_path(@customer),local:true do |f| %>
        <table class="table table-borderless">
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"会員ID" %></th>
            <td class="col-9"><%= f.label :"#{@customer.id}" %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"氏名" %></th>
            <td class="col-9"><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"フリガナ" %></th>
            <td class="col-9"><%= f.text_field :kana_first_name %><%= f.text_field :kana_last_name %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"郵便番号" %></th>
            <td class="col-9"><%= f.text_field :postal_code %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"住所" %></th>
            <td class="col-9"><%= f.text_field :address, size: 80 %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"電話番号" %></th>
            <td class="col-9"><%= f.text_field :telephone_number %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"メールアドレス" %></th>
            <td class="col-9"><%= f.text_field :email %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"会員ステータス" %></th>
            <td class="col-9">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
        </table>
        <div>
          <%= f.submit "変更を保存する", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
