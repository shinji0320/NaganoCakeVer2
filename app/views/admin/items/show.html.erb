<div class="container">
<h2>商品詳細</h2>
<%= flash[:success] %>
  <div class="row">
    <div class="col-3">
      <%= attachment_image_tag(@item, :image, size: "200x200", fallback: "no_image.jpg") %>
    </div>
    <div class="col-9">
      <table class="table table-borderless">
        <tr class="d-flex">
          <th class="col-3">商品名</th>
          <td class="col-3"><%= @item.name %></td>
        </tr>
        <tr class="d-flex">
          <th class="col-3">商品説明</th>
          <td class="col-3"><%= @item.detail %></td>
        </tr>
        <tr class="d-flex">
          <th class="col-3">ジャンル</th>
          <td class="col-3"><%= @item.genre.name %></td>
        </tr>
        <tr class="d-flex">
          <th class="col-3">
            <p>税込価格</p>
            <p>(税抜価格)</p>
          </th>
          <td class="col-3">
            <p><%= @item.price %></p>
            <p><%= (@item.price * 1.08).round %></p>
          </td>
        </tr>
        <tr class="d-flex">
          <th class="col-3">販売ステータス</th>
          <td class="col-3">
            <% if @item.is_sold == true %>
              <p class = "text-success">販売中</p>
            <% elsif @item.is_sold == false %>
              <p class = "text-secondary">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
<div class="mx-auto" style="width: 200px;">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>