<div class="container">
  <h2>配送先登録/一覧</h2>
  <%= flash[:success] %>
  <div class="row my-3">
    <%= form_with model:@address, url: public_addresses_path,local:true do |f| %>
      <table class="table table-borderless">
        <tr class="d-flex">
          <th class="col-3"><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td class="col-9"><%= f.text_field :postal_code %></td>
        </tr>
        <tr class="d-flex">
          <th class="col-3"><%= f.label :"住所" %></th>
          <td class="col-9"><%= f.text_field :address, size: 80 %></td>
        </tr>
        <tr class="d-flex">
          <th class="col-3"><%= f.label :"宛名" %></th>
          <td class="col-9"><%= f.text_field :name %></td>
        </tr>
      </table><br />
          <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="row my-5">
    <table class = "table table-bordered">
      <thead class = "thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
              <%= link_to "編集する",edit_public_address_path(address), class: "btn btn-primary" %>
              <%= link_to "削除する",public_address_path(address), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>