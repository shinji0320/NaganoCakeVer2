		<div class='container px-12 px-sm-0'>
		  <div class='row'>
		    <div class='col-md-9'>
					<h3>注文情報入力</h3>
					<%= form_with model: @orders, url: public_orders_confirm_path, method: :get,local: true do |f| %>
						<%= f.label :payment_method, "支払い方法" %>
						<br>
						<%= f.radio_button :payment_method, 0, checked: "checked" %>
						<%= f.label :payment_method, "クレジットカード" %>
						<br>
						<%= f.radio_button :payment_method, 1 %>
						<%= f.label :payment_method, "銀行振込" %>
						<br>
				</div>
				<div class='col-md-9'>
					<div class="mt-3">
						<%= f.label :address, "お届け先" %>
						<br>
						<%= f.radio_button :address_option, 0, checked: "checked" %>
						<%= f.label :order_address, "ご自身の住所" %>
						〒<%= @customer.postal_code %>
						<%= @customer.address %>
						<br>
						<%= f.radio_button :address_option, 1 %>
						<%= f.label :order_address, "登録済住所から選択" %>
						<%= f.collection_select :address_id, current_customer.addresses, :id, :resistration, :include_blank => "選択してください" %>

						<br>
						<%= f.radio_button :address_option, 2 %>
						<%= f.label :order_address, "新しいお届け先" %>
						<br>

						<%= f.label :postal_code, "郵便番号" %>
						<%= f.text_field :postal_code %>
						<br>
						<%= f.label :address, "住所" %>
						<%= f.text_field :address %>
						<br>
						<%= f.label :name, "宛名" %>
						<%= f.text_field :name %>
					<div class='col-md-4'>
						<div class="mt-3">
							<%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
							<% end %>
						</div>
					</div>
				  </div>
		    </div>
		  </div>
		</div>