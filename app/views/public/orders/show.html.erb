<div class='container px-12 px-sm-0'>
  <h3>注文履歴詳細</h3>
  <div class='row'>
    <div class='col-md-7'>
      <h5>注文情報</h5>
        <table class='table order-information'>
          <tbody>
              <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td><%= @order.address %></td>
              </tr>
              <tr>
                <th>支払い方法</th>
                <td><%= @order.payment_method%></td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td><%= @order.status %></td>
              </tr>
          </tbody>
        </table>
    </div>
      <div class="col-md-5">
      <h5>請求情報</h5>
        <table class='table billing-information'>
          <tbody>
           <tr>
            <th>商品合計</th>
            <td><%= @item_total %></td>

            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>

            <th>ご請求額</th>
            <td><%= @order.total_price %></td>
           </tr>
          </tbody>
        </table>
      </div>
    <div class='col-md-10'>
      <h5>注文内容</h5>
      <table class='table order-details'>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.purchased_price %></td>
              <td><%= order_item.count %></td>
              <% @subtotal = order_item.purchased_price * order_item.count %>
              <td><%= @subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
