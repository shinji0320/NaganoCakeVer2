<div class="container">
  <h2>商品一覧<span>（全<%= @items.count%>件）</span></h2>
  <div class="row">
    <div class="col">
      <div id="items-space">
        <% @items.each do |item| %>
	      <div class="item-presentation">
	        <%= link_to public_item_path(item.id), :style=>"color:black;" do %>
            <div class="item-picture">
              <%= attachment_image_tag(item, :image, size: "120x120", fallback: "no_image.jpg") %>
            </div>
            <p class="item-name">
              <%= item.name %>
            </p>
            <p class="item-price-with-tax">
              ¥<%= (item.price * 1.08).to_i.to_s(:delimited) %>
            </p>
          <% end %>
        </div>
	      <% end %>
	    </div>
	  </div>
	</div>
</div>
<div class="mx-auto" style="width: 200px;"><%= paginate(@items) %></div>
	
