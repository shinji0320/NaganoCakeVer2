<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <% if customer_signed_in? %>
     <li>
        マイページ
      </li>
      <li>
        商品一覧
      </li>
      <li>
        カート
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
      <% elsif admin_signed_in? %>
      <div class="row list-unstyled">
        <li>
          <%= link_to "商品一覧", admin_items_path, class: "m-3 btn btn-sm btn-success" %>
        </li>
        <li>
          <%= link_to "会員一覧", admin_customers_path, class: "m-3 btn btn-sm btn-success " %>
        </li>
        <li>
          <%= link_to "注文履歴一覧", admin_orders_path, class: "m-3 btn btn-sm btn-success" %>
        </li>
        <li>
          <%= link_to "ジャンル一覧", admin_genres_path, class: "m-3 btn btn-sm btn-success" %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "m-3 btn btn-sm btn-success" %>
        </li>
        </div>
    <% else %>
      <li>
        About
      </li>
      <li>
        商品一覧
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>
